[include]
	path = ~/.config/git/catppuccin.gitconfig

# https://github.com/git/git/security/advisories/GHSA-8prw-h3cq-mghm
[core]
	symlinks = false
	pager = delta

[interactive]
	diffFilter = delta --color-only

[delta]
	navigate = true
	features = catppuccin-frappe

[merge]
	conflictstyle = diff3

[diff]
	colorMoved = default

[user]
	name = Ashlen
	email = dev@anthes.is
	signingkey = 90965AE120F8E848979DEA4853670DEBCF375780
[init]
	defaultBranch = main

## https://forums.whonix.org/t/git-users-enable-fsck-by-default-for-better-security/2066
[transfer]
	fsckobjects = true
[fetch]
	fsckobjects = true
[receive]
	fsckobjects = true

[commit]
	gpgsign = true
[tag]
	gpgSign = true
[push]
	gpgSign = if-asked
