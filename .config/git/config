## NOTE: can't be enabled unless dotfiles repo removes symlinks. Also
# may cause compatibility issues
#[core]
## https://github.com/git/git/security/advisories/GHSA-8prw-h3cq-mghm
	#symlinks = false

[user]
	name = Ashlen
	email = dev@anthes.is
[init]
	defaultBranch = main

## https://forums.whonix.org/t/git-users-enable-fsck-by-default-for-better-security/2066
[transfer]
	fsckobjects = true
[fetch]
	fsckobjects = true
[receive]
	fsckobjects = true

[commit]
	gpgsign = true
