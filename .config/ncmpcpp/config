# Formats
alternative_header_first_line_format = $5$aqqu$/a $9{$b$8%t$/b}|{%f}$9 $5$atqq$/a$9
alternative_header_second_line_format = {{$7%a$9}{ $7-$9 $7%b$9}{ $7(%y)$9}}|{%D}
current_item_inactive_column_prefix = $(white)$r
current_item_inactive_column_suffix = $/r$(end)
current_item_prefix = $(cyan)$r
current_item_suffix = $/r$(end)
selected_item_prefix = $3
selected_item_suffix = $9
song_columns_list_format = (20)[cyan]{a} (6f)[blue]{NE} (50)[white]{t|f:Title} (20)[cyan]{b} (7f)[blue]{l}
song_list_format = {%a - }{%t}|{$8%f$9}$R{%l}

