color body color2 default "^gpg: Good signature .*"
color body color2 default "(Good signature)"
color body underline color1 default "^gpg: BAD signature from.*"
color body underline color1 default "(BAD signature)"

color body color5 default "[ ]?[*][^*]*[*][ ]" # more emoticon?
color body color5 default "[ ][*][^*]*[*][ ]?" # more emoticon?
color body color5 default "[;:][)(|]" # emoticons
color body color5 default "[;:][-o][)/(|]" # emoticons

# Code highlighting
color body color5 default "\`[^\`]*\`"
